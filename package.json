{
  "name": "mongoose-slug-plugin",
  "description": "Slugs for Mongoose with history and i18n support (uses speakingurl by default, but you can use any slug library such as limax, slugify, mollusc, or slugme)",
  "version": "1.0.2",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "bugs": {
    "url": "https://github.com/ladjs/mongoose-slug-plugin/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "lodash": "^4.17.11",
    "speakingurl": "^14.0.1",
    "underscore.string": "^3.3.5"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "ava": "^1.3.1",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "moment": "^2.24.0",
    "mongoose": "^5.4.19",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/ladjs/mongoose-slug-plugin",
  "keywords": [
    "mongoose",
    "slug",
    "plugin",
    "lad",
    "koa",
    "express",
    "mongo",
    "mongodb",
    "preserve",
    "history",
    "seo",
    "url",
    "unique",
    "slugify",
    "hyphenize",
    "dasherize",
    "dashes",
    "dashed",
    "hyphens",
    "speakingurl",
    "speaking",
    "limax",
    "slugs",
    "generator",
    "get",
    "lodash",
    "template",
    "tmpl",
    "string",
    "str",
    "mongoosejs",
    "slugme",
    "urls",
    "mollusc",
    "me",
    "slugme",
    "redirect",
    "redirection",
    "boom",
    "301",
    "302",
    "blog",
    "post"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ]
  },
  "main": "index.js",
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/mongoose-slug-plugin"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "pretest": "mongo mongoose_slug_plugin --eval 'db.dropDatabase();'",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "max-params": [
        "error",
        5
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
